<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FA4A0C"
    android:layoutAnimation="@transition/anim_setting_left">

    <ImageView
        android:id="@+id/img"
        android:layout_width="411dp"
        android:layout_height="464dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/illustration1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fastest_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="Fastest Delivery 24/7"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fastest_del">

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:checked="true"
            android:onClick="onStepScreen1" />

        <RadioButton
            android:id="@+id/radioButton20"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onStepScreen2" />


    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>